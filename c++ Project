CODE 1:

#include<iostream>
using namespace std;
int main()
{
    char a;
    int b;
    float c;
    double d;

    cout<<"Size of char:"<<sizeof(a)<<" byte"<<endl;
    cout<<"Size of int:"<<sizeof(b)<<" bytes"<<endl;
    cout<<"Size of float:"<<sizeof(c)<<" bytes"<<endl;
    cout<<"Size of double:"<<sizeof(d)<<" bytes"<<endl;

    return 0;
}

CODE 2:

#include<iostream>
using namespace std;
int main()
{
    float a,b,c;
    cout<<"Enter the value of a:";
    cin>>a;
    cout<<"Enter the value of b:";
    cin>>b;

    c=a*b;
    cout<<"Multiplication of entered number is:"<<c<<endl;
    return 0;
}
